
FROM --platform=linux/amd64 ubuntu:latest

# Met à jour le système et installe les paquets essentiels, y compris sra-toolkit
RUN apt-get update && apt-get install -y \
    curl\
    unzip\
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

RUN curl -O https://cyfuture.dl.sourceforge.net/project/bowtie-bio/bowtie/0.12.7/bowtie-0.12.7-linux-x86_64.zip?viasf=1 && unzip bowtie-0.12.7-linux-x86_64.zip && ln -s /app/bowtie-0.12.7/bowtie /usr/bin/bowtie && ln -s /app/bowtie-0.12.7/bowtie /usr/bin/bowtie-build








# Définit le répertoire de travail


# Exécute le script au démarrage (si nécessaire)
CMD ["bash"]
