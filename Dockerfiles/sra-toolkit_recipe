# Utiliser une image de base Ubuntu
FROM ubuntu:20.04

# Définir le frontend non interactif pour éviter les demandes d'entrée
ENV DEBIAN_FRONTEND=noninteractive 

# Mettre à jour le système et installer les dépendances nécessaires sans interaction
RUN apt-get update && \
    apt-get install -y \
    git \
    gcc \
    make \
    cmake \
    libxml2-dev \
    libssl-dev \
    curl \
    autoconf \
    libcurl4-openssl-dev \
    libncurses5-dev \
    build-essential \
    libbz2-dev \
    zlib1g-dev \
    liblzma-dev \
    openjdk-11-jdk \
    python3 \
    python3-dev \
    python3-pip \
    python3-setuptools \
    python3-distutils && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Alias python3 -> python, pour s'assurer que python pointe vers python3
RUN ln -s /usr/bin/python3 /usr/bin/python

# Cloner et installer ncbi-vdb (dépendance pour sra-tools)
RUN git clone https://github.com/ncbi/ncbi-vdb.git && \
    cd ncbi-vdb && \
    ./configure && \
    make && \
    make install

# Cloner et installer ngs (autre dépendance pour sra-tools)
RUN git clone https://github.com/ncbi/ngs.git && \
    cd ngs && \
    ./configure && \
    make && \
    make install

# Cloner et compiler SRA Toolkit
RUN git clone https://github.com/ncbi/sra-tools.git && \
    cd sra-tools && \
    ./configure --prefix=/usr/local/sratoolkit && \
    make && \
    make install

# Ajouter le chemin à SRA Toolkit dans le PATH
ENV PATH="/usr/local/sratoolkit/bin:${PATH}"

# Créer un dossier de travail
WORKDIR /data

# Exposer ce dossier pour utiliser des fichiers de données
VOLUME ["/data"]

# Commande par défaut pour accéder au terminal
CMD ["bash"]
